{{!
    @template mod_openstudio/actions

    Actions template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "subscriptionid": "1"
    }

}}
<div class="openstudio-buttons-settings">
    {{#enablesubscription}}
        <div class="openstudio-subscribe-button">
            <button type="submit" class="btn" name="subscribebutton" id="openstudio_subscribe_button"
                {{#subscriptionid}}
                    subscriptionid="{{subscriptionid}}"
                {{/subscriptionid}}>
                {{#subscriptionid}}
                    {{#str}} unsubscribe, mod_openstudio {{/str}}
                {{/subscriptionid}}
                {{^subscriptionid}}
                    {{#str}} subscribetothisstudio, mod_openstudio {{/str}}
                {{/subscriptionid}}
            </button>
        </div>
    {{/enablesubscription}}
    <div class="openstudio-add-dashboard-button">
     {{{addtodashboard}}}
    </div>
</div>
