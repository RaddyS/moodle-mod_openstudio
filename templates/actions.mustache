    {
        "placeholdertext" : "My Module",
        "rssfeedurl: "https://example.com//mod/openstudio/feed.php"
    }

}}
{{#enablesubscription}}
<div class="openstudio-nav-settings" role="navigation">
    <span class="openstudio-nav-email-subscription">{{# str }} emailsubscription, mod_openstudio {{/ str }} </span><span>{{# str }} emailsubscriptionsub1, mod_openstudio {{/ str }}</span>
    <div><span>{{# str }} emailsubscriptionsub2, mod_openstudio {{/ str }}</span><span> '{{# str }} subscribetothisstudio, mod_openstudio {{/ str }} {{placeholdertext}}'.</span></div>
</div>
<div class="openstudio-subscribe-button">
    <button type="submit" class="btn" name="subscribebutton">{{# str }} subscribetothisstudio, mod_openstudio {{/ str }} {{placeholdertext}}</button>
</div>
{{/enablesubscription}}

<div class="openstudio-add-dashboard-button">
    <button type="submit" class="btn" name="rssbutton">{{# str }} addtodashboardbutton, mod_openstudio {{/ str }}</button>
</div>