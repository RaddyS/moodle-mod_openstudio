{{!
    @template mod_openstudio/folder_browse_posts_header

    Folder browse posts header template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {

    }

}}

<div class="openstudio-folder-browse-posts-searched-header clearfix">
    <div>{{#str}} folderbrowsepostspost, openstudio {{/str}}</div>
    <div>{{#str}} folderbrowsepostsposttitle, openstudio {{/str}}</div>
    <div>{{#str}} folderbrowsepostsfilename, openstudio {{/str}}</div>
    <div>{{#str}} folderbrowsepostslocation, openstudio {{/str}}</div>
    <div>&nbsp;</div>
</div>

{{#contents}}
    <div class="openstudio-browse-post-item clearfix" id="browse_post_item_{{id}}">
        <input type="hidden" value="{{name}}" id="browse_post_item_name_{{id}}">
        <div class="openstudio-browse-post-item-title-box" id="browse_post_item_title_box_mobile">
            <div class="openstudio-browse-post-item-title">{{name}}</div>
            <div class="openstudio-browse-post-item-date">{{datetime}}</div>
        </div>
        <div class="openstudio-browse-post-item-img">
            <img id="browse_post_item_img_{{id}}" src="{{contenttypeimage}}" alt="{{name}}">
        </div>
        <div class="openstudio-browse-post-item-title-box" id="browse_post_item_title_box">
            <div class="openstudio-browse-post-item-title">{{name}}</div>
            <div class="openstudio-browse-post-item-date">{{datetime}}</div>
        </div>
        <div class="openstudio-browse-post-item-filename">{{content}}</div>
        <div class="openstudio-browse-post-item-title-box">
            <img src="{{contenticon}}" alt="{{contentlocation}}">
            <span class="openstudio-browse-post-item-location">{{contentlocation}}</span>
        </div>
        <div class="openstudio-browse-post-item-button">
            <button value="{{id}}" name="openstudio-folder-select-post-btn" class="openstudio-folder-select-post-btn">
                {{#str}} folderselectbtn, mod_openstudio {{/str}}
            </button>
        </div>
    </div>
{{/contents}}

<div class="openstudio-folder-browse-posts-header-result-buttons-bottom clearfix">
    <button class="folder-browse-post-remove-last-selection osep-smallbutton">
        {{#str}} folderbrowsepostremovelastselection, openstudio {{/str}}
    </button>
    <button class="folder-browse-post-save-change osep-smallbutton">
        {{#str}} folderbrowsepostsavechange, openstudio {{/str}}
    </button>
</div>
