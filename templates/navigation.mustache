{{!
    @template openstudio/navigation

    Navigation template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name" : "Shared Content",
        "url" : "https://example.com/mod/openstudio/view.php?id=4",
        "pix" : moodle_url Object,
        "class" : "shared-content",
        "hassubnavigation" : "true",
        "subnavigation" : {
            "name" : "My Module",
            "url" : "https://example.com/mod/openstudio/view.php?id=4&vid=3&fblock=0&ftype=0&fflag=0&ftags&fsort=1&osort=0",
         }
    }
}}

<ul class="nav nav-pills">
    {{# navigation }}
        <li role="presentation" class="{{#hassubnavigation}}dropdown{{/hassubnavigation}} {{ class }}">
            {{#hassubnavigation}}
                <a class="dropdown-toggle" data-toggle="dropdown" href="{{ url }}" role="button" aria-haspopup="true" aria-expanded="false">
                    <span class="openstudio-navigation-img"><img src="{{ pix }}" alt="" class="openstudio-navigation-icon" /></span>
                    <span class="openstudio-navigation-text">{{ name }}</span>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    {{# subnavigation }}
                       <li><a href="{{{ url }}}">{{ name }}</a></li>
                    {{/ subnavigation }}
                </ul>
            {{/hassubnavigation}}
            {{^hassubnavigation}}
                <a href="{{{ url }}}">
                    <span class="openstudio-navigation-img"><img src="{{ pix }}" alt="" class="openstudio-navigation-icon" /></span>
                    <span class="openstudio-navigation-text">{{ name }}</span>
                </a>
            {{/hassubnavigation}}
        </li>
    {{/ navigation }}
    {{# notificationnumber }}
    <li>
            <span id="openstudio_navigation_notification">
                <span class="openstudio-navigation-img"><img src="{{ notificationicon }}" alt="" class="openstudio-navigation-notification-icon" /></span>
                <span class="openstudio-navigation-notification-text">{{ notificationnumber }}</span>
            </span>
    </li>
    {{/ notificationnumber }}
</ul>