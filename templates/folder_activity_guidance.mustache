{{!
    @template mod_openstudio/folder_activity_guidance

    Folder activity guidance template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "folderguidance" : "Folder guidance",
        "uploadicon" : "../../../mod/openstudio/pix/uploads_rgb_32px.svg",
        "contentguidances": [
            {
                "contentnumber" : "01",
                "contenttitle" : "Content 01",
                "contentguidance" : "Content guidance 01"
            },
            {
                "contentnumber" : "02",
                "contenttitle" : "Content 02",
                "contentguidance" : "Content guidance 02"
            },
            {
                "contentnumber" : "03",
                "contenttitle" : "Content 03",
                "contentguidance" : "Content guidance 03"
            }
        ]
    }

}}

{{{folderguidance}}}

{{#contentguidances}}
    <div class="openstudio-activity-guidance-item clearfix">
        <div class="openstudio-activity-guidance-item-row clearfix">
            <div class="openstudio-activity-guidance-item-column1">
                <div class="openstudio-activity-guidance-item-order">{{contentnumber}}</div>
            </div>
            <div class="openstudio-activity-guidance-item-column2">
                <div class="openstudio-activity-guidance-item-upload-container">
                    <img class="openstudio-activity-guidance-item-upload-icon" src="{{{uploadicon}}}" alt="{{{contenttitle}}}">
                </div>
            </div>
            <div class="openstudio-activity-guidance-item-column3">{{{contenttitle}}}</div>
        </div>
        <div class="openstudio-activity-guidance-item-content clearfix">{{{contentguidance}}}</div>
    </div>
{{/contentguidances}}
