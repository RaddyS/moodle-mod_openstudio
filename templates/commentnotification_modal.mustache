{{!
    @template mod_openstudio/notification_modal

    Modal dialogue to confirm or cancel stopping notifications.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        name: "Example content",
        contentid: 1,
        commentid: 1
    }

}}

{{< core/modal }}
    {{$title}}{{#str}} stopnotifications, mod_openstudio {{/str}}{{/title}}
    {{$body}}{{#str}} stopnotificationsforcommenton, mod_openstudio, {{name}} {{/str}}{{/body}}
    {{$footer}}
    <button type="button" class="btn btn-primary" data-contentid="{{contentid}}" data-commentid="{{commentid}}" data-action="yes">
        {{#str}} stopnotifications, mod_openstudio {{/str}}
    </button>
    <button type="button" class="btn btn-secondary" data-action="no">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
