{{!
    @template mod_openstudio/paging_bar

    Paging page - basic HTML skeleton.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        firstlink: 'http://192.168.216.71/openstudio2/pluginfile.php/5/user/icon/clean/f2?rev=714',
        previouslink: 'http://192.168.216.71/openstudio2/pluginfile.php/5/user/icon/clean/f2?rev=714',
        currentpage: '3',
        nextlink: 'http://192.168.216.71/openstudio2/pluginfile.php/5/user/icon/clean/f2?rev=714'
    }

}}
<div class="paging openstudio-mobile-paging">
    {{#firstlink}}
        <a href="{{firstlink}}" class="openstudio-mobile-paging-first" title="{{#str}} streampagerfirst, openstudio {{/str}}">
            {{#pix}} t/left, core{{/pix}}
            {{#pix}} t/left, core{{/pix}}
        </a>
    {{/firstlink}}
    {{#previouslink}}
        <a class="openstudio-mobile-paging-previous" href="{{previouslink}}" title="{{#str}} streampagerprevious, openstudio {{/str}}">
            {{#pix}} t/left, core{{/pix}}
        </a>
    {{/previouslink}}
    <span class="openstudio-mobile-paging-current">
        {{#currentpage}} {{#str}} page {{/str}} {{/currentpage}}{{currentpage}}
    </span>
    {{#nextlink}}
        <a href="{{nextlink}}" title="{{#str}} streampagernext, openstudio {{/str}}"
           class="openstudio-mobile-paging-next">
            {{^currentpage}} {{#str}} streampagernext, openstudio {{/str}} {{/currentpage}}
            {{#pix}} t/right, core{{/pix}}
        </a>
    {{/nextlink}}
</div>