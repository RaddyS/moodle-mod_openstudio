{{!
    @template mod_openstudio/filter

    Filter template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "total" : "1000",
        "selectview" : true,
        "showmultigroup": true,
        "userpictureurl" : "../../../mod/openstudio/pix/people_rgb_32px.svg",
        "commentsicon" : "../../../mod/openstudio/pix/comments_rgb_32px.svg",
        "viewedicon" : "../../../mod/openstudio/pix/viewed_rgb_32px.svg",
        "activedate" : "1 January 70, 08:00",
        "flagscontentread" : "100",
        "totalpostedcomments" : "100",
        "userporgresspercentage" : "100",
        "fullusername" : "Admin User",
        "contentediturl": "http://exmaple/mod/openstudio/contentedit.php?id=4&lid=0&sid=0&type=0&sstsid=0",
        "myactivities" : "true",
        "percentcompleted" : "70",
        "showownfile" : true,
        "sortbydate" : false,
        "sortdesc" : true,
        "sortasc" : false,
        "sortbytitle" : true,
        "nextsortactionurl" : "http://example.com/mod/openstudio/view.php?id=7&vid=2&fsort=1&osort=0",
        "groupitems" : [
            {
               "id" : "1",
               "name" : "Group 1"
            },
            {
               "id" : "2",
               "name" : "Group 2"
            }
        ]
    }

}}

{{>mod_openstudio/profile_bar}}
<div class="openstudio-profile-rule"></div>

<span class="openstudio-filter-divider">
<span class="openstudio-filter-text">
    <span class="openstudio-filter-preferences">
        {{#str}} filterpreferences, mod_openstudio {{/str}}
    </span>
</span>
</span>

<span class="openstudio-filter-text openstudio-filter-link">
    <a data-toggle="collapse"
       data-name="filter-link-label"
       data-target="#filter_container"
       role="button"
       class="openstudio-filter-icon-expanded collapsed">
        {{#str}} filterfilter, mod_openstudio {{/str}}
        <span class="openstudio-expand-image">{{#pix}} t/collapsed, core, {{#str}} navfilterexpandon, openstudio {{/str}} {{/pix}}</span>
        <span class="openstudio-collapse-image">{{#pix}} t/expanded, core, {{#str}} navfilterexpandoff, openstudio {{/str}} {{/pix}}</span>
    </a>
</span>
<span class="openstudio-filter-divider"></span>
<span class="openstudio-filter-sort-divider">
    {{>mod_openstudio/filter_by_date}}
    <span class="openstudio-filter-sort-text openstudio-filter-sort-text-title">
        {{>mod_openstudio/filter_by_title}}
    </span>
</span>

<span class="openstudio-filter-text">
    <span>{{#str}} filtertotal, mod_openstudio {{/str}}: {{total}}</span>
</span>

{{#selectview}}
    {{>mod_openstudio/filter_by_group}}
{{/selectview}}

{{#myactivities}}
    {{>mod_openstudio/filter_by_activities}}
{{/myactivities}}
{{^myactivities}}
    {{>mod_openstudio/filter_by_pagesizes}}
{{/myactivities}}

<div class="openstudio-filter-active {{^filteractive}}openstudio-hidden{{/filteractive}}">
    <div id="filter_active_container" class="openstudio-filter-arrow-box">
        <span>{{#str}} navfilteroptionexpandonfilteractive, mod_openstudio {{/str}}</span>
    </div>
</div>
<div id="filter_box_container" class="clearfix">
    {{>mod_openstudio/filter_box}}
</div>
<input type="hidden" id="view_sort_action_url" value="{{sortactionurl}}">
<input type="hidden" id="vid" value="{{vid}}">
