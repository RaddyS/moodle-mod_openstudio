{{!
    @template mod_openstudio/filter

    Filter template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "total" : "1000",
        "selectview" : true,
        "showmultigroup": true,
        "groupitems" : [
            {
               "id" : "1",
               "name" : "Group 1"
            },
            {
               "id" : "2",
               "name" : "Group 2"
            }
        ]
    }

}}
<span class="openstudio-filter-devider">
<span class="openstudio-filter-text">
    <a href="#" class="openstudio-filter-collapsed">
        {{#str}} filterpreferences, mod_openstudio {{/str}}
    </a>
</span>
</span>

<span class="openstudio-filter-sort-devider">
<span class="openstudio-filter-sort-text ">{{#str}} filtersortby, mod_openstudio {{/str}}
    <a href="#" class="openstudio-filter-expanded openstudio-filter-text-selected">
        {{#str}} filterdate, mod_openstudio {{/str}}
    </a>
</span>
<span class="openstudio-filter-sort-text openstudio-filter-sort-text-title">
    <a href="#" class="openstudio-filter-collapsed">
        {{#str}} filtertitle, mod_openstudio {{/str}}
    </a>
</span>
</span>

<span class="openstudio-filter-text">
<span>{{#str}} filtertotal, mod_openstudio {{/str}}: {{total}}</span>
</span>
{{#selectview}}
<span class="openstudio-filter-select">
    <span>{{#str}} filtergroup, mod_openstudio {{/str}}:</span>
    {{#showmultigroup}}
        <select>
           <option value="0">{{#str}} filterall, mod_openstudio {{/str}}</option>
          {{#groupitems}}
            <option value="{{id}}">{{name}}</option>
          {{/groupitems}}
        </select>
    {{/showmultigroup}}
    {{^ showmultigroup}}
        {{#groupitems}}
            <span>{{name}}</span>
        {{/groupitems}}
    {{/showmultigroup}}
</span>
{{/selectview}}

{{#myactivities}}
    <span class="openstudio-filter-select">
    <span>{{#str}} filterwork, mod_openstudio {{/str}}:</span>
    <select id="filter_block_activity">
            <option value="0">{{#str}} filterall, mod_openstudio {{/str}}</option>
        {{#blocksdata}}
            <option value="{{id}}">{{name}}</option>
        {{/blocksdata}}
    </select>
</span>
{{/myactivities}}

<span class="openstudio-filter-select">
    <span>{{# str }} filterview, mod_openstudio {{/ str }}:</span>
    <select>
        <option value="50">50</option>
        <option value="100" selected="selected">100</option>
        <option value="250">250</option>
        <option value="300">300</option>
    </select>
</span>
