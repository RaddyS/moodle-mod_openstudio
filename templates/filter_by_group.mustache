{{!
    @template mod_openstudio/filter_by_group

    Filter template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "showmultigroup": true,
        "groupitems" : [
            {
               "id" : "1",
               "name" : "Group 1"
            },
            {
               "id" : "2",
               "name" : "Group 2"
            }
        ]
    }

}}
<span class="openstudio-filter-select">
    {{#showmultigroup}}
        <label for="filter_groupid">{{#str}} filtergroup, mod_openstudio {{/str}}:</label>
        <select id="filter_groupid">
            {{#groupitems}}
                <option value="{{groupid}}" name="{{name}}"
                        {{#selectedgroup}}selected="selected"{{/selectedgroup}}>{{name}}
                </option>
            {{/groupitems}}
        </select>
    {{/showmultigroup}}
    {{^showmultigroup}}
        {{#groupitems}}
            <label for="filter_groupid">{{#str}} filtergroup, mod_openstudio {{/str}}:</label>
            <span>{{name}}</span>
        {{/groupitems}}
    {{/showmultigroup}}
</span>
