{{!
    @template mod_openstudio/notification_modal

    Modal dialogue to confirm or cancel stopping notifications.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        name: "Example content",
        contentid: 1
    }

}}

{{< core/modal }}
    {{$title}}{{#str}} stopnotifications, mod_openstudio {{/str}}{{/title}}
    {{$body}}
        <p>{{#str}} stopnotificationsfor, mod_openstudio, {{name}} {{/str}}</p>
        <div>
            <button type="button" class="btn btn-primary" data-contentid="{{contentid}}" data-action="yes">{{#str}} stopnotifications, mod_openstudio {{/str}}</button>
            <button type="button" class="btn btn-secondary" data-action="no">{{#str}} cancel {{/str}}</button>
        </div>
    {{/body}}
{{/ core/modal }}
