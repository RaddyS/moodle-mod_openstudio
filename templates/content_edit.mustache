{{!
    @template openstudio/content_edit

    Content edit template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "addcontenticon" : "../../../theme/image.php?theme=osep&amp;component=openstudio&amp;image=add_content_rgb_32px",
        "editform" : "<form></form>",
        "isfolderlock" : true,
        "foldermode": true,
        "feature_enablefolders" : true
    }

}}

<div class="openstudio-content-edit-form">
    <h1 class="accesshide">{{#str}} contenteditformheader, mod_openstudio {{/str}}</h1>

    {{#isfolderlock}}
        {{#str}} contentislocked, mod_openstudio {{/str}}
    {{/isfolderlock}}
    {{^isfolderlock}}
        <div class='openstudio-add-content-form'>
            <img src="{{addcontenticon}}"
                 alt="{{#str}} contentaddnew, mod_openstudio {{/str}}"
                 class="openstudio-add-content-icon" />
            <span class="openstudio-upload-content-title">
                {{#foldermode}}
                    {{#folderdetails}}
                        {{#str}} editfolder, mod_openstudio {{/str}}
                    {{/folderdetails}}
                    {{^folderdetails}}
                        {{#str}} createnewfolder, mod_openstudio {{/str}}
                    {{/folderdetails}}
                {{/foldermode}}
                {{^foldermode}}
                    {{#contentmode}}
                        {{#str}} contentedit, mod_openstudio {{/str}}
                    {{/contentmode}}
                    {{^contentmode}}
                        {{#str}} contentaddnew, mod_openstudio {{/str}}
                    {{/contentmode}}
                {{/foldermode}}
            </span>
        </div>
        <div class="openstudio-clear"></div>
        {{{editform}}}
    {{/isfolderlock}}
</div>