{{!
    @template mod_openstudio/filter_by_title

    Filter template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "sortbytitle" : true,
        "sortbytitleurl" : "http://example.com/mod/openstudio/view.php?id=7&vid=2&fsort=1&osort=0"
    }

}}

{{#sortbytitle}}
    <a href="{{sortbytitleurl}}" class="openstudio-filter-icon openstudio-filter-text-selected">
        {{#str}} filtertitle, mod_openstudio {{/str}}
    </a>
    {{#sortdesc}}{{#pix}} t/collapsed, core, {{#str}} filtersortactivedesc, openstudio {{/str}} {{/pix}}{{/sortdesc}}
    {{#sortasc}}{{#pix}} t/expanded, core, {{#str}} filtersortactiveasc, openstudio {{/str}} {{/pix}}{{/sortasc}}
{{/sortbytitle}}
{{^sortbytitle}}
    <a href="{{sortbytitleurl}}" class="">{{#str}} filtertitle, mod_openstudio {{/str}}</a>
{{/sortbytitle}}
