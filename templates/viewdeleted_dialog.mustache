{{!
    @template mod_openstudio/viewdeleted_dialog

    View deleted post dialogue

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "deletedposts": [
            {
                "pictureurl": "../../../mod/openstudio/pix/icon.svg",
                "name": "Content title",
                "date": "5/10/16, 13:27",
                "id": 10
            }
        ]
    }

}}
<div class="openstudio-view-deleted">
    <div class="openstudio-view-deleted-header">
        <div class="openstudio-view-deleted-header-hint">
            {{#str}} folderdeletedcontentsintro, mod_openstudio {{/str}}
        </div>
    </div>
    <div class="openstudio-view-deleted-body">
        {{#deletedposts}}
            <div class="openstudio-view-deleted-item clearfix">
                <div class="openstudio-view-deleted-item-row">
                    <div class="openstudio-view-deleted-item-column1">
                        <div class="openstudio-view-deleted-item-picture">
                            <img src="{{pictureurl}}" alt="{{name}}" />
                        </div>
                    </div>
                    <div class="openstudio-view-deleted-item-column2">
                        <span class="openstudio-view-deleted-item-name">
                            {{name}}
                        </span>
                        <span class="openstudio-view-deleted-item-date">
                            {{date}}
                        </span>
                    </div>
                    <div class="openstudio-view-deleted-item-column3">
                        <button class="osep-smallbutton openstudio-restore-deleted-button" data-content-version-id="{{id}}">
                            {{#str}} contentclicktorestore, mod_openstudio {{/str}}
                        </button>
                    </div>
                </div>
            </div>
        {{/deletedposts}}
    </div>
</div>
