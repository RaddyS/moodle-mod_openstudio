{{!
    @template mod_openstudio/folder_browse_posts_header

    Folder browse posts header template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {

    }

}}
<div class="openstudio-folder-browse-posts-header clearfix">
    <div>{{#str}} folderbrowsepostshint, mod_openstudio {{/str}}</div>
    <div class="openstudio-folder-browse-posts-search-box">
        <label for="openstudio_searchquery"></label>
        <input type="text" name="search" id="openstudio_search_post"
               placeholder="{{#str}} navsearchlabel, openstudio {{/str}}"/>
        <button class="browse-search-icon" name="{{#str}} folderbrowssearch, openstudio {{/str}}">
            {{#pix}} search, mod_openstudio, {{#str}} folderbrowssearch, openstudio {{/str}} {{/pix}}
        </button>
    </div>
</div>

<div class="openstudio-folder-browseposts-selected clearfix" id="browse_posts_selected">
    <div class="openstudio-folder-browseposts-selected-box">
        <span class="openstudio-folder-browseposts-selected-header">{{#str}} folderselectedpost, openstudio {{/str}}</span>
        (<span id="openstudio-browseposts-countcurrent">0</span>/<span id="openstudio-browseposts-total">{{total}}</span>)
        <span id="openstudio-browseposts-helpicon"></span>
    </div>
    <div class="openstudio-folder-browseposts-selected-items" id="browse_posts_selected_items"></div>
</div>

<div class="openstudio-folder-browse-posts-header-result clearfix">
    <div class="openstudio-folder-browse-posts-header-result-label" id="folder_total_browse_posts">
        {{#str}}
            folderbrowsepostsfound, mod_openstudio, { "number": {{#quote}}{{total}}{{/quote}} }
        {{/str}}
    </div>
    <div class="openstudio-folder-browse-posts-header-result-buttons">
        <button class="folder-browse-post-remove-last-selection osep-smallbutton">
            {{#str}} folderbrowsepostremovelastselection, openstudio {{/str}}
        </button>
        <button class="folder-browse-post-save-change osep-smallbutton">
            {{#str}} folderbrowsepostsavechange, openstudio {{/str}}
        </button>
    </div>
</div>

<div class="openstudio-folder-browse-posts-searched clearfix" id="browse_posts_searched"></div>
<form method="post" action="" id="browse_posts_selected_from">
    <input type="hidden" name="selectedposts" id="browse_posts_selected_ids">
</form>
